function show_memory_info -d "Prints information about memory"
    set --local total_memory (free -m | grep Mem | awk '{print $2}')
    set --local used_memory (free -m | grep Mem | awk '{print $3}')

    set_color yellow
    echo -en "Memory: "
    set_color 0F0 # green
    echo -en "$used_memory MiB / $total_memory MiB"
end

function show_uptime -d "Prints system uptime"
    set up_time (uptime)
    echo -n $up_time
end
